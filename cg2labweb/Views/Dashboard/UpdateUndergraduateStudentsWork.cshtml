@model infra.ViewModels.ViewUndergraduateStudentsWork
@{
    ViewData["Title"] = "UpdateUndergraduateStudentsWork";
    Layout = "~/Views/Shared/Dash_Layout.cshtml";
}

    <div class="content-wrapper" style="min-height: 431px;">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="col">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">上傳專題生成果</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    @using (Html.BeginForm("UpdateUndergraduateStudentsWork", "Dashboard", FormMethod.Post))
                    {
                        
                        <!--<form role="form" asp-controller="Dashboard" asp-action="UpdateUndergraduateStudentsWork"
        enctype="multipart/form-data" method="post">-->
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1">作者姓名<small>(如果有2人以上請照範例打 EX:王XX、劉XX)</small></label>
                                @Html.EditorFor(model => model.teammate, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.teammate, "", new { @class = "text-danger" })
                                <!--<input type="text" class="form-control" id="AuthorName" name="teammate" required>-->
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">題目名稱</label>
                                @Html.EditorFor(model => model.topic, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.topic, "", new { @class = "text-danger" })
                                <!--<input type="text" class="form-control" id="topic" name="topic" required>-->
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Youtube網址</label>
                                @Html.EditorFor(model => model.youtubeURL, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.youtubeURL, "", new { @class = "text-danger" })
                                <!--<input type="url" class="form-control" id="topic" name="youtubeURL" required>-->
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">雲端網址</label>
                                @Html.EditorFor(model => model.googleDriveURL, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.googleDriveURL, "", new { @class = "text-danger" })
                                <!--<input type="url" class="form-control" id="topic" name="googleDrive" required>-->
                            </div>

                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary" onclick="return confirm('確定要上傳嗎?')">
                                上傳
                            </button>
                        </div>
                        <!--</form>-->
                    }
                </div>
            </div>
            
        </div>
    </div>

