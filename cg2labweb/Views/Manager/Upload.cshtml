
@{
    ViewData["Title"] = "Upload";
    Layout = "~/Views/Shared/Dash_Layout.cshtml";
}

<h1>上傳檔案</h1>

<div>
    <h4>單檔上傳</h4>
    <form asp-controller="Manager" asp-action="Upload" enctype="multipart/form-data" method="post">
        <input type="file" name="file" />
        <button type="submit">確定上傳</button>
    </form>
</div>
<div>
    <h4>多檔上傳</h4>
    <form asp-controller="Manager" asp-action="MulitipleFile" enctype="multipart/form-data" method="post">
        <input type="file" multiple name="file" />
        <button type="submit">確定上傳</button>
    </form>
</div>
